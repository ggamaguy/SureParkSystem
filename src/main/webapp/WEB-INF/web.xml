<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/spring/root-context.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>appServlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/spring/appServlet/servlet-context.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>appServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>UserController</display-name>
    <servlet-name>UserController</servlet-name>
    <servlet-class>controllers.UserController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserController</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>CardValidationController</display-name>
    <servlet-name>CardValidationController</servlet-name>
    <servlet-class>controllers.CardValidationController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CardValidationController</servlet-name>
    <url-pattern>/card</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>NoShowStatus</display-name>
    <servlet-name>NoShowStatus</servlet-name>
    <servlet-class>controllers.NoShowStatus</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NoShowStatus</servlet-name>
    <url-pattern>/noshow</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>OpenGateController</display-name>
    <servlet-name>OpenGateController</servlet-name>
    <servlet-class>controllers.OpenGateController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OpenGateController</servlet-name>
    <url-pattern>/opengate</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>OwnerController</display-name>
    <servlet-name>OwnerController</servlet-name>
    <servlet-class>controllers.OwnerController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OwnerController</servlet-name>
    <url-pattern>/owner</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LocalSurePark</display-name>
    <servlet-name>LocalSurePark</servlet-name>
    <servlet-class>controllers.LocalSurePark</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LocalSurePark</servlet-name>
    <url-pattern>/surepark</url-pattern>
  </servlet-mapping>
</web-app>